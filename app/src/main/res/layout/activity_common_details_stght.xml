<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/Color_Title"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fanhui"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点详情"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWrite"
            android:textSize="25dp"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/share"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_share"
            android:background="@mipmap/star"
            android:layout_margin="15dp"
            android:id="@+id/iv_shoucang"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/commend_item_view_pager"
                android:layout_width="match_parent"
                android:layerType="software"
                android:layout_height="200dp">

            </com.jude.rollviewpager.RollPagerView>
            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commend_item_info"
                android:layout_gravity="center"

                android:textColor="@color/colorBlack"
                android:layout_below="@id/commend_item_view_pager"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_price"

                    android:textColor="@color/colorOrange"
                    android:textSize="19dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_after"
                    android:textSize="10dp"

                    android:layout_alignBottom="@+id/commend_item_price"
                    android:layout_toEndOf="@+id/commend_item_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_keep"

                    android:drawableLeft="@mipmap/shoucangxing"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/price_after"
                    android:layout_toStartOf="@+id/commend_item_share"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_share"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/fenxiang"
                    android:layout_alignTop="@+id/commend_item_keep"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDarkGrey"
                android:layout_below="@+id/commend_item_share"
                android:layout_alignParentStart="true"
                android:id="@+id/view2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="景点地址："
                    android:id="@+id/textView2"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                   />
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_address"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView2"/>
                <LinearLayout
                    android:id="@+id/ll_baidumap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/diturukou"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/commend_item_satnav"
                        android:text="点击导航"

                        />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDarkGrey"
                android:layout_below="@+id/commend_item_address"
                android:layout_alignEnd="@+id/commend_item_share"
                android:layout_marginBottom="10dp"
                android:id="@+id/view"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="友情提示："
                    android:textColor="@color/green"
                    android:layout_marginRight="5dp"
                    android:id="@+id/textView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_tips"
                    android:layout_alignTop="@id/textView"
                    android:layout_toRightOf="@id/textView"/>
            </RelativeLayout>
            <RadioGroup
                android:background="@color/colorLightGrey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
                >
                <RadioButton
                    android:tag="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:id="@+id/rb_jieshao"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:text="景点介绍"/>
                <RadioButton
                    android:tag="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/rb_goumai"
                    android:layout_weight="1"
                    android:text="购买须知"/>
                <RadioButton
                    android:tag="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/rb_xiangce"
                    android:layout_weight="1"
                    android:text="景点相册"/>
                <RadioButton
                    android:tag="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/rb_dianping"
                    android:layout_weight="1"
                    android:text="游客点评"/>
                <RadioButton
                    android:tag="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/rb_shaitu"
                    android:layout_weight="1"
                    android:text="晒图"/>
            </RadioGroup>
            <RelativeLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cerate_time"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_constraint"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/publish_time"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/salecount"

                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FEC413"
                android:gravity="center"
                android:text="联系客服"
                android:textSize="18dp"
                android:visibility="gone"
                android:textColor="@color/colorWrite"
                android:padding="5dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
