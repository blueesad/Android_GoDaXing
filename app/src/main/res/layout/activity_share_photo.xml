<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.home.activity.SharePhotoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/Color_Title"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/photo_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fanhui"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晒图咯"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWrite"
            android:textSize="25dp"
            />

    </RelativeLayout>
    <RadioGroup
        android:id="@+id/photo_radiogroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <RadioButton
            android:id="@+id/photo_tuijian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/near_selector"
            android:checked="true"
            android:textColor="@drawable/text_color"
            android:text="推荐景点"
            android:textSize="17sp"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/photo_together"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/near_selector"
            android:textColor="@drawable/text_color"
            android:text="一起玩咯"
            android:textSize="17sp"
            android:button="@null"
            android:gravity="center"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/photo_container_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
