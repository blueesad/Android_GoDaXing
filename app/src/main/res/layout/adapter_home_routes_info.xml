<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/home_routes_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/home_routes_title"
            android:text="TITLE"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignTop="@+id/home_routes_iv"
            android:layout_toEndOf="@+id/home_routes_iv" />
        <TextView
            android:id="@+id/home_routes_summary"
            android:text="Summary"
            android:textSize="14sp"
            android:textColor="#C8C8C8"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_routes_title"
            android:layout_alignStart="@+id/home_routes_title" />
        <TextView
            android:id="@+id/home_routes_publish"
            android:text="publish"
            android:textSize="14sp"
            android:textColor="#C8C8C8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_routes_iv"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>