<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/Color_Title"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fanhui"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点详情"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWrite"
            android:textSize="25dp"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/share"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_share"
            android:background="@mipmap/star"
            android:layout_margin="15dp"
            android:id="@+id/imageView"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/commend_item_view_pager"
                android:layout_width="match_parent"
                android:layerType="software"
                android:layout_height="200dp">

            </com.jude.rollviewpager.RollPagerView>
            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commend_item_info"
                android:layout_gravity="center"
                android:text="name"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/commend_item_view_pager"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_price"
                    android:text="price"
                    android:textColor="@color/colorOrange"
                    android:textSize="19dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="commend_item_price_after"
                    android:id="@+id/price_after"
                    android:textSize="10dp"

                    android:layout_alignBottom="@+id/commend_item_price"
                    android:layout_toEndOf="@+id/commend_item_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_keep"
                    android:text="keep"
                    android:drawableLeft="@mipmap/shoucangxing"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/price_after"
                    android:layout_toStartOf="@+id/commend_item_share"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_share"
                    android:text="share"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/fenxiang"
                    android:layout_alignTop="@+id/commend_item_keep"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDarkGrey"
                android:layout_below="@+id/commend_item_share"
                android:layout_alignParentStart="true"
                android:id="@+id/view2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="景点地址："
                    android:id="@+id/textView2"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_address"
                    android:text="address"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/diturukou"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/commend_item_satnav"
                        android:text="点击导航"

                        />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDarkGrey"
                android:layout_below="@+id/commend_item_address"
                android:layout_alignEnd="@+id/commend_item_share"
                android:layout_marginBottom="10dp"
                android:id="@+id/view"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="友情提示："
                    android:textColor="@color/green"
                    android:layout_marginRight="5dp"
                    android:id="@+id/textView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commend_item_tips"
                    android:text="111"
                    android:layout_alignTop="@id/textView"
                    android:layout_toRightOf="@id/textView"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorLightGrey"
                android:layout_below="@+id/textView"
                android:layout_alignEnd="@+id/commend_item_share"
                android:id="@+id/view3"/>
            <RadioGroup
                android:background="@color/colorLightGrey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
                android:layout_below="@+id/view3"
                android:layout_alignParentStart="true">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:id="@+id/commend_item_introduce"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:text="景点介绍"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/commend_item_notes"
                    android:layout_weight="1"
                    android:text="购买须知"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/commend_item_photo"
                    android:layout_weight="1"
                    android:text="景点相册"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/commend_item_comments"
                    android:layout_weight="1"
                    android:text="游客点评"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/near_selector"
                    android:textColor="@drawable/text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/commend_item_show_photo"
                    android:layout_weight="1"
                    android:text="晒图"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorLightGrey"
                android:layout_below="@+id/radioGroup"
                android:layout_alignEnd="@+id/commend_item_share"
                android:id="@+id/view4"/>
            <RelativeLayout
                android:id="@+id/rl_tese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品特色"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:drawableLeft="@mipmap/chanpingtese"
                    android:layout_centerVertical="true"

                    android:id="@+id/textView3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/zhankai"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commend_item_webview"
                android:layout_below="@+id/textView3"
                android:layout_alignEnd="@+id/commend_item_share">

            </WebView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/rl_jiaotong"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交通信息"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:drawableLeft="@mipmap/jiaotong"
                    android:id="@+id/textView4"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/zhankai"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commend_item_transportation"
                android:text="Transportation "
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:layout_alignStart="@+id/textView4"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
