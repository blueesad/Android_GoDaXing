<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.travel.dx.godaxing.modules.home.activity.TrendsDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/Color_Title"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/routesDetails_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fanhui"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线路详情"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWrite"
            android:textSize="25dp"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/textView"
                    android:text="发布时间:      "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/routesDetails_keep"
                    android:layout_alignBottom="@+id/routesDetails_keep"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/routesDetails_time"
                    android:text=" time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_toEndOf="@+id/textView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/routesDetails_keep"
                    android:text="keep"
                    android:drawableLeft="@mipmap/shoucangxing"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/routesDetails_share" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/routesDetails_share"
                    android:text="share"
                    android:drawableLeft="@mipmap/fenxiang"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/routesDetails_pagerView"
                android:layout_width="match_parent"
                android:layerType="software"
                android:layout_height="150dp">
            </com.jude.rollviewpager.RollPagerView>
            <TextView
                android:id="@+id/routesDetails_title"
                android:text="title"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <WebView
                android:id="@+id/routesDetails_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </WebView>
            <RelativeLayout
                android:id="@+id/rl1_jingdiantuijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tv_jingdiantuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/chanpingtese"
                    android:text="景点推荐"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/image_show2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/zhankai" />

            </RelativeLayout>
            <ListView
                android:id="@+id/lv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rl_jingdiantuijian"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/rl1_yiqiwanlo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tv_constraint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/jiaotong"
                    android:text="一起玩咯"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/image_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/zhankai" />
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_show3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
