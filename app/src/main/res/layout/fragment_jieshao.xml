<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.travel.dx.godaxing.widget.ScrollListView
        android:id="@+id/jieshao_listview"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="wrap_content">

    </com.travel.dx.godaxing.widget.ScrollListView>
    <RelativeLayout
        android:id="@+id/rl_tese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_tese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/chanpingtese"
            android:text="产品特色"
            android:textColor="@color/colorBlack"

            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/zhankai" />
    </RelativeLayout>

    <WebView
        android:id="@+id/commend_item_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/commend_item_share"
        android:layout_below="@+id/textView3">

    </WebView>

    <RelativeLayout
        android:id="@+id/rl_jiaotong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiaotong"
            android:text="交通信息"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/zhankai" />
    </RelativeLayout>

    <TextView
        android:id="@+id/commend_item_transportation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_margin="10dp"
        android:text="Transportation "
        android:textColor="@color/colorBlack" />

</LinearLayout>